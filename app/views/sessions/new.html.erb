<div id="page-content">
<h1 class="text-center mt-4">Log in</h1>
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-10 mx-auto">
            <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>
            <div class="mb-3 row">
                <%= f.label :email, class: "col-2 col-form-label text-white"%>
                <div class="col-10">
                    <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address"%>
                </div>
            </div>


                <div class="mb-3 row">
                <%= f.label :password, class: "col-2 col-form-label text-white"%>
                <div class= "col-10">
                    <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password"%>
                </div>
                </div>
                <div class="input-group justify-content-center mb-3">

                <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
                </div>

            <% end %> 
        </div>
    </div>
    <%= link_to '[Cancel and return to articles listing]', articles_path, class: "row justify-content-center"%>
    </div>
</div>